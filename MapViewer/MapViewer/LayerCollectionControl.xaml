<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MapViewer.LayerCollectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MapViewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
	Loaded="UserControl_Loaded">

	<Grid>
		<Expander VerticalAlignment="Top" Margin="5,5,0,0">
			<Expander.Header>
				<StackPanel Orientation="Horizontal">
					<FontIcon Glyph="&#xE81E;"/>
					<TextBlock x:Name="HeaderTextBlock" Margin="8,0,0,0" VerticalAlignment="Center"/>
				</StackPanel>
			</Expander.Header>
			<StackPanel x:Name="LayersStackPanel" Orientation="Vertical">
				<Button HorizontalAlignment="Left" Click="CloseButton_Click">
					<StackPanel Orientation="Horizontal">
						<SymbolIcon Symbol="Cancel"/>
						<TextBlock Margin="8,0,0,0" VerticalAlignment="Center" Text="Close map collection"/>
					</StackPanel>
				</Button>
			</StackPanel>
		</Expander>
	</Grid>
</UserControl>
